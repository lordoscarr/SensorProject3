<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MorseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_margin="10dp" android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INCOMING MESSAGE"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S O S"
            android:textColor="@android:color/black"
            android:textSize="32dp"
            android:id="@+id/resultText"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="READ MORSE"
            android:id="@+id/readButton"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLEAR INCOMING MESSAGE"
            android:id="@+id/clearButton"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEND SOS"
            android:id="@+id/sosButton"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEND OK"
            android:id="@+id/okButton"/>

    </LinearLayout>

</FrameLayout>